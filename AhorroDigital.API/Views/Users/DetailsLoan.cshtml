<div class="col-md-12 mb-4" data-aos="fade-left" data-aos-duration="2000">
    <a asp-action="AddLoan" asp-route-id="@Model.Id" class="btn btn-primary">Adiccionar Préstamo</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar Usuario</a>
    <a asp-action="Index" class="btn btn-success">Regresar</a>
</div>

<div class="container__infoprocess" data-aos="fade-left" data-aos-duration="2000">
    <flash dismissable="true" />
</div>


<div class=" saving" data-aos="fade-left" data-aos-duration="2000">
    <div class="card content__t ">
        <div class="card-header color_text">
            <i class="fa-solid fa-credit-card"></i>  <strong>Préstamos</strong>
        </div>
        <div class="card-body">
            <div id="view-all">

                <table class="table table-striped table-bordered" id="SavingTable" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().LoanType)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().DateS)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().DateA)
                            </th>
                             <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().State)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().DateNesxtPa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().Marks)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().MarksAdmin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().Value)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().ValueP)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().ValueD)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().ValueDues)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().ValueNextDues)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().Interest)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().Dues)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().PaymetsCount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().PaymetsCountP)
                            </th>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().Total)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().TotalP)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().TotalD)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().ValueTotal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().TotalAvail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().DayArrears)
                            </th>
                              <th>
                                @Html.DisplayNameFor(model => model.Loans.FirstOrDefault().ValueArrears)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ImageFullPath)
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Loans)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.LoanType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.DateS)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.DateA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.State)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.DateNesxtPa)
                                </td>
                                <td>
                                    @{
                                        if (item.Marks != null)
                                        {
                                            string[] noteWords = item.Marks.Split(' ');
                                            if (noteWords.Count() > 7)
                                            {
                                                <a class="" role="button" data-bs-toggle="collapse" href="#collapseSum@(item.Id)" aria-expanded="false" aria-controls="collapseSum@(item.Id)">
                                                    @(string.Join(" ", noteWords.Take(7)) + "...")
                                                </a>
                                                <div class="collapse" id="collapseSum@(item.Id)">
                                                    <div class="card card-body bg-light">
                                                        @(string.Join(" ", noteWords.Skip(7)))
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.Marks)
                                                ;
                                            }
                                        }
                                    }
                                </td>
                                
                                <td>
                                        @{
                                            if (item.MarksAdmin != null)
                                            {
                                                string[] noteWords = item.MarksAdmin.Split(' ');
                                                if (noteWords.Count() > 7)
                                                {
                                                <a class="" role="button" data-bs-toggle="collapse" href="#collapseSum@(item.Id)" aria-expanded="false" aria-controls="collapseSum@(item.Id)">
                                                        @(string.Join(" ", noteWords.Take(7)) + "...")
                                                </a>
                                                <div class="collapse" id="collapseSum@(item.Id)">
                                                    <div class="card card-body bg-light">
                                                            @(string.Join(" ", noteWords.Skip(7)))
                                                    </div>
                                                </div>
                                                }
                                                else
                                                {
                                                    @Html.DisplayFor(modelItem => item.MarksAdmin)
                                                    ;
                                                }
                                            }
                                        }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.Value)
                                </td>
                                 <td>
                                    @Html.DisplayFor(modelItem=>item.ValueP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.ValueD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.ValueDues)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.ValueNextDues)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.Interest)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.Dues)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.PaymetsCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.PaymetsCountP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.Total)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.TotalP)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.TotalD)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.ValueTotal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.TotalAvail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.DayArrears)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.ValueArrears)
                                </td>
                                <td>
                                    <img src="@item.ImageFullPath" style="width:60px; height:60px; border-radius:30px" />
                                </td>
                                <td>
                                    <a asp-action="EditLoan" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a asp-action="DetailsSaving" asp-route-id="@item.Id" class="btn btn-info"><i class="fa-solid fa-money-bill-transfer"></i></a>
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa-solid fa-trash"></i></button>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

