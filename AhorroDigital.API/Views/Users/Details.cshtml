<div class=" mb-4" data-aos="fade-left" data-aos-duration="2000">
        <article class="questions__padding">
            <div class="questions__answer">
                <h3 class="questions__title">
                    Usuario
                    <span class="questions__arrow">
                        <img src="~/images/arrow.svg" class="questions__img">
                    </span>
                </h3>

                <div class="questions__show">
                    <div class="row">
                        <div class="col-md-12 content_info-u">
                            <img src="@Model.ImageFullPath" style="width: 100px; height: 100px; border-radius:25px;" />
                            <dl class="row">
                                <dt class="col-sm-5">
                                    @Html.DisplayNameFor(model=>model.FullName)
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model=> model.FullName)
                                </dd>
                                <dt class="col-sm-5">
                                    @Html.DisplayNameFor(model=>model.DocumentType.Name)
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model=> model.DocumentType.Name)
                                </dd>
                                <dt class="col-sm-5">
                                    @Html.DisplayNameFor(model=>model.Document)
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model=> model.Document)
                                </dd>
                                <dt class="col-sm-5">
                                    @Html.DisplayNameFor(model=>model.Email)
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model=> model.Email)
                                </dd>
                                <dt class="col-sm-5">
                                    @Html.DisplayNameFor(model=>model.PhoneNumber)
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model=> model.PhoneNumber)
                                </dd>
                                <dt class="col-sm-5">
                                    @Html.DisplayNameFor(model=>model.AccountType.Name)
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model=> model.AccountType.Name)
                                </dd>
                                <dt class="col-sm-5">
                                    @Html.DisplayNameFor(model=>model.AccountNumber)
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model=> model.AccountNumber)
                                </dd>
                                <dt class="col-sm-5">
                                    @Html.DisplayNameFor(model=>model.Bank)
                                </dt>
                                <dd class="col-sm-7">
                                    @Html.DisplayFor(model=> model.Bank)
                                </dd>
                            </dl>
                        </div>

                    </div>

                </div>

            </div>
        </article>

    </div>

<div class="col-md-12 mb-4" data-aos="fade-left" data-aos-duration="2000">
        <a asp-action="AddSaving" asp-route-id="@Model.Id" class="btn btn-primary">Adiccionar Ahorro</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar Usuario</a>
        <a asp-action="Index" class="btn btn-success">Regresar</a>


    </div>

<div class="container__infoprocess" data-aos="fade-left" data-aos-duration="2000">
        <flash dismissable="true" />
    </div>

<div class="container__tableUsers saving" data-aos="fade-left" data-aos-duration="2000">
        <div class="card content__t ">
            <div class="card-header color_text">
                <i class="fa-solid fa-money-bill-1"></i>  <strong>Ahorros</strong>
            </div>
            <div class="card-body">
                <div id="view-all">

                    <table class="table table-striped table-bordered" id="SavingTable" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().SavingType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().DateIni)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().DateEnd)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().MinValue)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().Marks)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().ContributesCount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().TotalOut)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Savings.FirstOrDefault().Total)
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Savings)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.SavingType.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.DateIni)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.DateEnd)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.MinValue)
                                    </td>
                                    <td>
                                        @{
                                            if (item.Marks != null)
                                            {
                                                string[] noteWords = item.Marks.Split(' ');
                                                if (noteWords.Count() > 7)
                                                {
                                                    <a class="" role="button" data-bs-toggle="collapse" href="#collapseSum@(item.Id)" aria-expanded="false" aria-controls="collapseSum@(item.Id)">
                                                        @(string.Join(" ", noteWords.Take(7)) + "...")
                                                    </a>
                                                    <div class="collapse" id="collapseSum@(item.Id)">
                                                        <div class="card card-body bg-light">
                                                            @(string.Join(" ", noteWords.Skip(7)))
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    @Html.DisplayFor(modelItem => item.Marks)
                                                    ;
                                                }
                                            }
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.ContributesCount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.TotalOut)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem=>item.Total)
                                    </td>
                                    <td>
                                        <a asp-action="EditSaving" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a asp-action="DetailsSaving" asp-route-id="@item.Id" class="btn btn-info"><i class="fa-solid fa-money-bill-transfer"></i></a>
                                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa-solid fa-trash"></i></button>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <partial name="_DeleteDialog" />





