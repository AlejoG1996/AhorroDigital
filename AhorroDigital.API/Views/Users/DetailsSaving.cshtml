<div class="container__tableUsers saving" data-aos="fade-left" data-aos-duration="2000">
    <div class="card content__t ">
        <div class="card-header color_text">
            <i class="fa-solid fa-money-bill-transfer"></i>  <strong>Consignaciones</strong>
        </div>
        <div class="card-body">
            <div id="view-all">

                <table class="table table-striped table-bordered" id="SavingTable" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Contributes.FirstOrDefault().Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contributes.FirstOrDefault().Marks)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contributes.FirstOrDefault().MarksAdmin)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contributes.FirstOrDefault().State)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contributes.FirstOrDefault().Value)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contributes.FirstOrDefault().ValueAvail)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contributes.FirstOrDefault().ValueSlop)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contributes.FirstOrDefault().UserAdmin.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Contributes.FirstOrDefault().ImageFullPath)
                            </th>
                            
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Contributes)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.Date)
                                </td>
                                <td>
                                    @{
                                        if (item.Marks != null)
                                        {
                                            string[] noteWords = item.Marks.Split(' ');
                                            if (noteWords.Count() > 7)
                                            {
                                                <a class="" role="button" data-bs-toggle="collapse" href="#collapseSum@(item.Id)" aria-expanded="false" aria-controls="collapseSum@(item.Id)">
                                                    @(string.Join(" ", noteWords.Take(7)) + "...")
                                                </a>
                                                <div class="collapse" id="collapseSum@(item.Id)">
                                                    <div class="card card-body bg-light">
                                                        @(string.Join(" ", noteWords.Skip(7)))
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.Marks)
                                                ;
                                            }
                                        }
                                    }
                                </td>

                                <td>
                                    @{
                                        if (item.MarksAdmin != null)
                                        {
                                            string[] noteWords = item.MarksAdmin.Split(' ');
                                            if (noteWords.Count() > 7)
                                            {
                                                <a class="" role="button" data-bs-toggle="collapse" href="#collapseSum@(item.Id)" aria-expanded="false" aria-controls="collapseSum@(item.Id)">
                                                    @(string.Join(" ", noteWords.Take(7)) + "...")
                                                </a>
                                                <div class="collapse" id="collapseSum@(item.Id)">
                                                    <div class="card card-body bg-light">
                                                        @(string.Join(" ", noteWords.Skip(7)))
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.MarksAdmin)
                                                ;
                                            }
                                        }
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.State)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.Value)
                                </td>
                               
                                <td>
                                    @Html.DisplayFor(modelItem=>item.ValueAvail)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.ValueSlop)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem=>item.UserAdmin.FullName)
                                </td>
                                <td>
                                    <img src="@item.ImageFullPath" style="width:60px; height:60px; border-radius:30px" />
                                </td>
                                <td>
                                    <a asp-action="EditContribute" asp-route-id="@item.Id" class="btn btn-dark"><i class="fa-solid fa-pen-to-square"></i></a>
                                   @* <a asp-action="DetailsSaving" asp-route-id="@item.Id" class="btn btn-info"><i class="fa-solid fa-money-bill-transfer"></i></a>*@
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa-solid fa-trash"></i></button>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
