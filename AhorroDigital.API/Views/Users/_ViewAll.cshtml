@model IEnumerable<AhorroDigital.API.Data.Entities.User>

<flash dismissable="true" />

<div class="mb-2">
    <a asp-action="Create" class="btn btn-outline-primary btn_new"><i class="fa-solid fa-circle-plus"></i> Nuevo Administrador</a>
</div>

<table class="table table-striped table-bordered" id="UsersTable" style="width:100%">
  
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DocumentType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                Teléfono
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SavingAccount)
            </th>
            <th>
                Habilitado
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFullPath)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentType.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SavingAccount)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.EmailConfirmed)
            </td>
            <td>
                    
                        <img src="@item.ImageFullPath" style="width:100px; height:100px; border-radius:50px" />
                  
            </td>
        </tr>
        }
    </tbody>
</table>
