@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="col-md-12" data-aos="fade-left" data-aos-duration="2000">
        <div clas="mt-4">
            <div class="mt-4">
                <div class="col-md-12">
                    <div class="container-fluid">

                        <div class="row cont_dr">

                            <div class="col-xl-3 col-md-6 mb-4 cont_p">
                                <div class="card_info-loan">
                                    <div class="col-md-12 ">
                                        <dl class="row detail_info-loan">
                                            <div class="col-md-8 ">
                                                <dt class="col-sm-12">
                                                    Consignaciones
                                                </dt>
                                                <dd class="col-sm-12">
                                                    @ViewBag.ContContribute Registros
                                                </dd>
                                            </div>

                                            <div class="col-auto">
                                                <i class="fa-solid fa-piggy-bank icon_card-loan"></i>
                                            </div>

                                            @{
                                                int val1 = ViewBag.ContContributev;
                                            }
                                            <div class="col-md-12 ">
                                                <dt class="col-sm-12">
                                                    Total Consignaciones
                                                </dt>
                                                <dd class="col-sm-12">
                                                    @val1.ToString("C")
                                                </dd>
                                            </div>
                                            
                                        </dl>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-3 col-md-6 mb-4 cont_p">
                                <div class="card_info-loan" style=" border-left: 5px solid #17A589 !important;">
                                    <div class="col-md-12 ">
                                        <dl class="row detail_info-loan">
                                            <div class="col-md-8">
                                                <dt class="col-sm-12">
                                                    Préstamos
                                                </dt>
                                                <dd class="col-sm-12">
                                                    @ViewBag.ContLoan Registros
                                                </dd>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa-solid fa-money-bill-transfer  icon_card-loan"></i>
                                            </div>
                                            @{
                                                int val2 = ViewBag.ContLoanv;
                                            }
                                            <div class="col-md-12 ">
                                                <dt class="col-sm-12">
                                                    Total Préstamos
                                                </dt>
                                                <dd class="col-sm-12">
                                                    @val2.ToString("C")
                                                </dd>
                                            </div>
                                        </dl>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-3 col-md-6 mb-4 cont_p">
                                <div class="card_info-loan" style=" border-left: 5px solid #229954 !important;">
                                    <div class="col-md-12 ">
                                        <dl class="row detail_info-loan">
                                            <div class="col-md-8">
                                                <dt class="col-sm-12">
                                                    Pagos
                                                </dt>
                                                <dd class="col-sm-12">
                                                    @ViewBag.ContPayments Registros

                                                </dd>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa-solid fa-money-check-dollar  icon_card-loan"></i>
                                            </div>
                                            @{
                                                int val3 = ViewBag.ContPaymentsv;
                                            }
                                            <div class="col-md-12 ">
                                                <dt class="col-sm-12">
                                                    Total Pagos
                                                </dt>
                                                <dd class="col-sm-12">
                                                    @val3.ToString("C")
                                                </dd>
                                            </div>
                                        </dl>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-3 col-md-6 mb-4 cont_p">
                                <div class="card_info-loan" style=" border-left: 5px solid #196F3D !important;">
                                    <div class="col-md-12 ">
                                        <dl class="row detail_info-loan">
                                            <div class="col-md-8">
                                                <dt class="col-sm-12">
                                                    Retiros
                                                </dt>
                                                <dd class="col-sm-12">
                                                    @ViewBag.ContRetreat Registros
                                                </dd>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fa-solid fa-hand-holding-dollar  icon_card-loan"></i>
                                            </div>
                                            @{
                                                int val4 = ViewBag.ContRetreatv;
                                            }
                                            <div class="col-md-12 ">
                                                <dt class="col-sm-12">
                                                    Total Retiros
                                                </dt>
                                                <dd class="col-sm-12">
                                                    @val4.ToString("C")
                                                </dd>
                                            </div>
                                        </dl>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

}




